<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tic-Tac-Toe</title>
    <%- include('partials/lib') %>
    <link rel="stylesheet" href="/css/home.css" />
    <script src="/js/app.js"></script>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="row">
            <div class="col-12">
              <div class="custFont">Mashup Creator</div>
            </div>
          </div>
          <form>
            <div class="row">
              <div class="col">
                <div class="d-grid gap-2">
                  <input
                    type="text"
                    placeholder="Enter duration"
                    name="duration"
                    required
                    maxlength="3"
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="d-grid gap-2">
                  <input
                    type="text"
                    placeholder="Enter handles (comma separated) For eg: handle1, handle2,handle3"
                    name="users"
                    required
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="d-grid gap-2">
                  <input
                    type="text"
                    placeholder="Enter ratings (comma separated) For eg: rating1, rating2,rating3"
                    name="ratings"
                    required
                  />
                </div>
              </div>
            </div>
            <div class="row mt-1">
              <div class="col">
                <div class="d-grid gap-2">
                  <input class="btn btn-primary bg-dark" type="submit" />
                </div>
              </div>
            </div>
          </form>
          <span class="container"></span>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
      $(document).ready(function () {
        $("form").on("submit", function (event) {
          event.preventDefault();
          // It returns a array of object
          const userinfo = $(this).serializeArray();
          //   console.log(userinfo);
          const user = {};
          userinfo.forEach((value) => {
            // Dynamically create an object
            user[value.name] = value.value;
          });
          $("span").text("Please wait");
          const url = "/q";
          $.ajax({
            method: "POST",
            url: url,
            data: user,
          })
            .done(function (msg) {
              console.log(msg);
              // When the request is successful
              $("span").text("Contest link: " + msg);
            })
            .fail(function (err, textstatus, error) {
              console.log(err);
            });
        });
      });
    </script>
  </body>
</html>
